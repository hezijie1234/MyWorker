<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.gongyou.dadaworker.activity.mine.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/dlbg"/>

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login_logo"/>

    <EditText
        android:singleLine="true"
        android:id="@+id/username"
        style="@style/login_input_editor_style"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_maxlarge"
        android:layout_marginTop="@dimen/margin_xxxlarge"
        android:layout_marginRight="@dimen/margin_maxlarge"
        android:hint="请输入手机号"
        android:paddingLeft="@dimen/padding_xxlarge" />


    <EditText
        android:id="@+id/password"
        style="@style/login_input_editor_style"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_maxlarge"
        android:layout_marginTop="@dimen/margin_xxxlarge"
        android:layout_marginRight="@dimen/margin_maxlarge"
        android:inputType="textPassword"
        android:singleLine="true"
        android:hint="请输入密码"
        android:paddingLeft="@dimen/padding_xxlarge" />


    <TextView
        android:id="@+id/tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:text="忘记密码"
        android:textColor="@color/umeng_blue" />

    <Button
        android:id="@+id/login"
        style="@style/login_button"
        android:layout_marginTop="@dimen/margin_xxxlarge"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_xxlarge"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="还没注册?"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:id="@+id/ll_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="@color/brownText"
                android:textSize="@dimen/text_size_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/brownText" />

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_medium">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册表示同意" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《用户手册》"
                android:textColor="@color/lightblue" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/umeng"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="68dp"
            android:layout_marginRight="68dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
            <!--<GridView-->
            <!--android:s_id="@+s_id/gv_login"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:numColumns="3"/>-->

            <ImageView
                android:id="@+id/login_weichart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/umeng_socialize_wechat" />

            <ImageView
                android:id="@+id/login_qq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/umeng_socialize_qq" />

            <ImageView
                android:id="@+id/login_sina"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/umeng_socialize_sina" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:background="@color/grayText" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="center"
                android:text="第三方登录"
                android:textSize="@dimen/text_size_medium" />

            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:background="@color/grayText" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
